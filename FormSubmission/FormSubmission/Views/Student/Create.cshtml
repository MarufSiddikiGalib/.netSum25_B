
@{
    ViewBag.Title = "Create";
}
<h4>@Model.Id</h4>
<h4>@Model.Name</h4>
<h4>@Model.Email</h4>
<h4>@Model.Address</h4>


@Html.ValidationSummary()

@*<h4>@Request["Name"]</h4>
    <h4>@Request["Id"]</h4>
    <h4>@Request["Address"]</h4>
    <h4>@Request["Email"]</h4>*@

@*<h4>@ViewBag.Name</h4>
    <h4>@ViewBag.Id</h4>
    <h4>@ViewBag.Address</h4>
    <h4>@ViewBag.Email</h4>*@
@{ 
    bool CheckGender(string gen) {
        if (Model.Gender != null && Model.Gender.Equals(gen)) {
            return true;
        }
        return false;
    }
    bool CheckProfession(string prf) {
        if (Model.Profession != null && Model.Profession.Equals(prf)) {
            return true;
        }
        return false;
    }
    bool CheckHobbies(string hob) {
        if (Model.Hobbies != null) {
            foreach (var item in Model.Hobbies)
            {
                if (item.Equals(hob)) return true;
            }
        }

        return false;
    }

}

<h2>Create</h2>
<form method="post">
    <input type="text" class="form-control" value="@Model.Name" placeholder="Name" name="Name" />
    <span class="text-danger">@Html.ValidationMessage("Name")</span>
    <input type="text" class="form-control" value="@Model.Id" placeholder="Id" name="Id" />
    <span class="text-danger">@Html.ValidationMessage("Id")</span>
    <input type="text" class="form-control" value="@Model.Email" placeholder="Email" name="Email" />
    <span class="text-danger">@Html.ValidationMessage("Email")</span>
    <input type="text" class="form-control" value="@Model.Address" placeholder="Address" name="Address" />
    <span class="text-danger">@Html.ValidationMessage("Address")</span>
    <br />

    Gender: <input type="radio" checked="@CheckGender("Male")" name="Gender" value="Male" /> Male
    <input type="radio" checked="@CheckGender("Female")" name="Gender" value="Female" /> Female
    <br />
    <span class="text-danger">@Html.ValidationMessage("Gender")</span>
    <br />
    Profession:
    <select name="Profession">
        <option disabled selected>---Select---</option>
        <option selected="@CheckProfession("Student")" value="Student">Student</option>
        <option selected="@CheckProfession("Business")" value="Business">Business</option>
        <option selected="@CheckProfession("Job")" value="Job">Job</option>
    </select>
    <br />
    <span class="text-danger">@Html.ValidationMessage("Profession")</span>
    <br />
    Hobbies:
    <input type="checkbox" checked="@CheckHobbies("Sports")" name="Hobbies[]" value="Sports" /> Sports
    <input type="checkbox" checked="@CheckHobbies("Travelling")" name="Hobbies[]" value="Travelling" /> Travelling
    <input type="checkbox" checked="@CheckHobbies("Gardenning")" name="Hobbies[]" value="Gardenning" /> Gardenning
    <br />
    <span class="text-danger">@Html.ValidationMessage("Hobbies")</span>

    <br />
    <input type="date" value="@Model.Dob.ToString("yyyy-MM-dd")" name="Dob" class="form-control" /> 
    <span class="text-danger">@Html.ValidationMessage("Dob")</span>

    <br />
    <input type="submit" class="btn btn-primary" value="Create" />

</form>

